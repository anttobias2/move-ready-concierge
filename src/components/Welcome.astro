<script>
  const hamburger = document.getElementById('hamburger');
  const navLinks = document.getElementById('navLinks');
  const year = document.getElementById('year');

  if (hamburger && navLinks) {
    hamburger.addEventListener('click', () => {
      navLinks.classList.toggle('open');
    });
  }

  if (year) {
    year.textContent = new Date().getFullYear().toString();
  }
</script>

<style>
  :root {
    --primary: #1e3a5f;
    --accent: #f59e0b;
    --accent-light: #fbbf24;
    --accent-soft: rgba(245,158,11,0.12);
    --warm: #fffbeb;
    --warm-mid: #fef3c7;
    --bg: #ffffff;
    --muted: #64748b;
    --border: #e2e8f0;
    --radius: 20px;
  }

  * { box-sizing: border-box; }

  body {
    margin: 0;
    font-family: 'Inter', system-ui, sans-serif;
    background: #ffffff;
    color: var(--primary);
    line-height: 1.7;
  }

  a { text-decoration: none; color: inherit; }

  .container {
    max-width: 1100px;
    margin: auto;
    padding: 4rem 1.25rem;
  }

  header {
    position: sticky;
    top: 0;
    background: rgba(255,255,255,0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(245,158,11,0.15);
    z-index: 1000;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.7rem;
    font-weight: 700;
    font-family: 'Sora', sans-serif;
    letter-spacing: -0.02em;
    font-size: 1.1rem;
    color: var(--primary);
  }

  nav {
    display: flex;
    gap: 2rem;
    align-items: center;
    font-weight: 500;
  }

  nav a:hover { 
    color: var(--accent);
    transition: color 0.3s ease;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--accent), var(--accent-light));
    color: white;
    padding: 0.8rem 1.6rem;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(245,158,11,0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(245,158,11,0.4);
  }

  .btn-secondary {
    border: 2px solid rgba(255,255,255,0.4);
    background: rgba(255,255,255,0.2);
    backdrop-filter: blur(10px);
    color: white;
    padding: 0.8rem 1.6rem;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-secondary:hover {
    background: rgba(255,255,255,0.3);
    border-color: rgba(255,255,255,0.6);
    transform: translateY(-2px);
  }

  .hamburger { display: none; flex-direction: column; gap: 5px; cursor: pointer; }
  .hamburger span { width: 26px; height: 3px; background: var(--primary); border-radius: 4px; }

  @media (max-width: 768px) {
    nav {
      position: absolute;
      top: 80px;
      left: 0;
      right: 0;
      background: rgba(255,255,255,0.98);
      flex-direction: column;
      padding: 1.5rem;
      display: none;
      border-bottom: 1px solid var(--border);
      gap: 1rem;
    }

    nav.open { display: flex; }
    .hamburger { display: flex; }
  }

  .hero {
    position: relative;
    padding: 10rem 0 8rem;
    text-align: center;
    background:
      linear-gradient(rgba(30,58,95,0.7), rgba(30,58,95,0.75)),
      url("https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ftse4.explicit.bing.net%2Fth%2Fid%2FOIP.FnQ9QLXLGPurssnXD4cuHgHaEK%3Fpid%3DApi&f=1&ipt=0e68ef473d63a8117588554eb4fc40dd01a64813ec55bdfea8d9804dc17ba365&ipo=images") center / cover no-repeat;
    color: white;
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: inherit;
    background-size: cover;
    background-position: center;
    filter: blur(0px) contrast(1.1) brightness(1.05);
    z-index: -1;
  }

  .hero h1 {
    font-family: 'Sora', sans-serif;
    font-size: clamp(2.5rem, 5vw, 3.6rem);
    margin-bottom: 1.2rem;
    letter-spacing: -0.02em;
    text-shadow: 0 2px 25px rgba(0,0,0,0.3);
    font-weight: 700;
  }

  .hero p {
    max-width: 680px;
    margin: 0 auto 2.8rem;
    color: rgba(255,255,255,0.95);
    font-size: 1.15rem;
    text-shadow: 0 1px 10px rgba(0,0,0,0.2);
    line-height: 1.8;
  }

  .hero-cta { 
    display: flex; 
    gap: 1.2rem; 
    justify-content: center; 
    flex-wrap: wrap; 
  }

  .hero h1, .hero p, .hero-cta {
    animation: fadeUp 0.7s ease both;
  }

  .hero p { animation-delay: 0.15s; }
  .hero-cta { animation-delay: 0.3s; }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
  }

  section { padding: 5.5rem 0; scroll-margin-top: 100px }

  .section-title { 
    text-align: center; 
    margin-bottom: 3.5rem; 
  }
  
  .section-title h2 { 
    font-family: 'Sora', sans-serif;
    font-size: 2.4rem; 
    margin-bottom: 0.8rem;
    color: var(--primary);
    font-weight: 700;
  }
  
  .section-title p { 
    color: var(--muted); 
    font-size: 1.1rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .card {
    background: #ffffff;
    border: 1.5px solid var(--border);
    border-radius: var(--radius);
    padding: 2.5rem;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  }

  .card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 35px rgba(245,158,11,0.15);
    border-color: var(--accent-soft);
  }

  .card h3 {
    font-family: 'Sora', sans-serif;
    color: var(--primary);
    margin-bottom: 0.8rem;
    font-size: 1.25rem;
  }

  .card p {
    color: var(--muted);
    line-height: 1.7;
  }

  .steps { counter-reset: step; }

  .step { position: relative; padding-left: 4rem; }

  .step::before {
    counter-increment: step;
    content: counter(step);
    position: absolute;
    left: 0;
    top: 0;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent), var(--accent-light));
    display: grid;
    place-items: center;
    font-weight: 700;
    color: white;
    font-family: 'Sora', sans-serif;
    font-size: 1.2rem;
    box-shadow: 0 4px 12px rgba(245,158,11,0.25);
  }

  .cta {
    background:
      linear-gradient(135deg, rgba(245,158,11,0.08), transparent),
      linear-gradient(135deg, var(--primary), #2d5a8f);
    color: white;
    border-radius: var(--radius);
    padding: 6rem 2.5rem;
    text-align: center;
    box-shadow: 0 20px 60px rgba(30,58,95,0.25);
  }

  .cta h2 { 
    font-family: 'Sora', sans-serif;
    font-size: 2.6rem; 
    margin-bottom: 1.2rem;
    font-weight: 700;
  }
  
  .cta p { 
    opacity: 0.95; 
    margin-bottom: 2.8rem;
    font-size: 1.15rem;
  }

  footer {
    padding: 3rem 0;
    text-align: center;
    color: var(--muted);
    font-size: 0.95rem;
    background: #ffffff;
    border-top: 1px solid var(--border);
  }

  html { scroll-behavior: smooth; }

  ::selection {
    background: var(--accent-soft);
    color: var(--primary);
  }
</style>